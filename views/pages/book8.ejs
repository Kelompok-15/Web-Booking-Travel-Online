    <div class="container">
      <hr>
      <div class="row mb-4">
        <div class="col mx-3 px-5 py-3 border rounded">
            <div class="row">
                <div class="col-sm">
                    <h5 class="my-3 text-dark"><img src="/gambar/lion-button.png" width="50" height="50">Lion Air</h5>
                    <div class="col-sm text-bottom">
                        <div class="mt-3"><strong>Melbourne - Australia</strong></div>
                        <div class="mt-3"><strong>Departure : 05.30</strong></div>
                        <div class="mt-3"><strong>Arrival   : 12.50</strong></div>
                        <div class="mt-3"><strong>Duration  : 7h 20m</strong></div>
                    </div>
                <div class="col-sm mt-5">
                    <h4 class="my-3 text-dark">Price Details</h4>
                    <h5 class="my-3 text-dark"><strong>Air (Adult) 1x  : IDR 5.200.000</strong></h5>
                    </div>
                </div>
            </div>
        </div>
            <div class="col mx-3 px-5 py-3 border rounded">
                <div class="row">
                    <div class="col-sm">
            <h4 class="mt-1">Contact Detail</h4>
        <form>
            <div class="form-group">
                <label for="formGroupExampleInput" class="mt-3">First Name</label>
                <input type="text" class="form-control" id="formGroupExampleInput" disabled>
            </div>
            <div class="form-group">
                <label for="formGroupExampleInput2">Last Name</label>
                <input type="text" class="form-control" id="formGroupExampleInput2" disabled>
            </div>
            <div class="form-group">
              <label for="exampleInputEmail1">Email address</label>
              <input type="email" class="form-control" id="exampleInputEmail1" disabled>
              <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
            </div>
            <div class="form-group">
                <label for="formGroupExampleInput2">Phone Number</label>
                <input type="text" class="form-control" id="formGroupExampleInput2" disabled>
            </div>
          </form>
          </div></div></div>

          <div class="col mx-3 px-5 py-3 border rounded">
            <div class="row">
                <div class="col-sm">
          <h4>Passenger Detail</h4>
          <div class="form-group">
            <label for="formGroupExampleInput" class="mt-3">First Name</label>
            <input type="text" class="form-control" id="formGroupExampleInput" disabled>
        </div>
        <div class="form-group">
            <label for="formGroupExampleInput2">Last Name</label>
            <input type="text" class="form-control" id="formGroupExampleInput2" disabled>
        </div>
        <div class="form-group">
            <label for="formGroupExampleInput2">Phone Number</label>
            <input type="text" class="form-control" id="formGroupExampleInput2" disabled>
        </div>
        <div class="form-group">
            <label for="formGroupExampleInput2">No. KTP</label>
            <input type="text" class="form-control" id="formGroupExampleInput2" disabled>
        </div>
        <div>
        <label for = "files">Foto / Scan KTP : </label>
        <input type = "file" name = "files" disabled>
        </div>
        <div class="mt-3">Payment Method :
            <img src="paypal.png" height="75" width="75">
        </div>
        </div></div></div>
        </div>
        <div class="text-right mb-3">
        <a href="/package/sydney/data/book/thank"><button class="btn btn-warning btn-lg "><img src ="/gambar/thumbs-up.svg" width="25" height="25" class="mr-2">Book Ticket</button></a>
        </div>
    </div>
